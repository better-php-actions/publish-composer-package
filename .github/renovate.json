{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "ignoreTests": true,
  "semanticCommitType": "fix",
  "semanticCommitScope": "deps",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
